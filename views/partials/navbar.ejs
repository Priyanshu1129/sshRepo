                        <i class="fa-sharp fa-solid fa-xmark"></i>
                    </div> 
                    <ul class="sm:flex font-sans text-lg font-bold">
                        <% header.nav_div.forEach((item,index)=>{ %>
                        <li class="py-2 sm:py-0 sm:pr-8"><a class="hover:text-orange-400 hover:underline" href="<%= item.url %>"><%= item.name %></a></li>
                        <% }) %>
                    </ul>
                </nav>
                <div class="flex w-16 justify-between">
                    <div class=" sm:fixed top-6 right-[5%]">
                        <i class="fa-regular fa-bag-shopping"></i>
                    </div>
