<body class="box-border">
    <section id="header" class="sticky top-0">
        <div class="flex justify-between p-4 bg-blue-50 shadow-[0px_2px_5px_0px_rgba(100,200,300,0.4)]">
            <div class="Left">
                <img src="<%= header.logo_div.url %>" alt="">
            </div>
            <div class="Right">
                <nav class="fixed top-0 sm:top-6 -right-80 sm:right-[10%] duration-500 bg-white bg-opacity-80 shadow-lg sm:shadow-none sm:bg-transparent  h-screen sm:h-auto w-44 sm:w-fit p-9 sm:p-0 sm:mr border-black sm:border-none font-medium"id="navbar">
